package queries

import (

	"github.com/graphql-go/graphql"
	"graphql-api/pkg/graphql/resolvers"
	gql "graphql-api/pkg/graphql"
)

// Define the TicketQueries type
var TicketEventQueriesType = graphql.NewObject(graphql.ObjectConfig{
	Name: "TicketEventQueries",
	Fields: graphql.Fields{
		"gets": &graphql.Field{
			Type:    graphql.NewList(gql.TicketEventGraphQLType),
			Args:    gql.SearhTextQueryArgument,
			Resolve: resolvers.GetTicketEventsResolve,
		},
	},
})
